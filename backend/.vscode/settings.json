{
  "python.testing.pytestEnabled": true,
  "flake8.args": [
    "--config",
    "pyproject.toml",
  ],
  "black-formatter.args": [
    "-l",
    "120",
    "-t",
    "py311",
    "--include",
    "\\.pyi?$",
  ],
  "python.analysis.include": [
    "src/**",
    "tests/**"
  ],
  "mypy.configFile": "pyproject.toml",
  "python.analysis.extraPaths": [
    "bases",
    "components"
  ],
}
